<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayoutActivity2">

    <Button
        android:id="@+id/r2Button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Button 3" />

    <Button
        android:id="@+id/r2Button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/r2Button3"
        android:layout_toLeftOf="@id/r2Button3"
        android:text="Button 1" />

    <Button
        android:id="@+id/r2Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/r2Button3"
        android:layout_toLeftOf="@id/r2Button3"
        android:text="Button 2" />

    <Button
        android:id="@+id/r2Button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/r2Button3"
        android:layout_toRightOf="@id/r2Button3"
        android:text="Button 4" />

    <Button
        android:id="@+id/r2Button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/r2Button3"
        android:layout_toRightOf="@id/r2Button3"
        android:text="Button 5" />

</RelativeLayout>